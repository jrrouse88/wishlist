<h1>Edit Comic:</h1>

<%= form_for @comic do |f| %>
    <div class='col-lg-6 center'>
        <div class='form=group'>
            <%= f.label :title, 'New Title: ', class: 'form-control-label' %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class='form=group'>
            <%= f.label :issue_number, 'New Issue Number: ', class: 'form-control-label' %>
            <%= f.number_field :issue_number, class: 'form-control' %>
        </div>
        <div class='form-group'>
            <%= f.label :price, 'New Price: ', class: 'form-control-label' %>
            <%= f.text_field :price, class: 'form-control' %>
        </div>
        <div class='form-group'>
            <%= f.label :image_url, 'New Image: ', class: 'form-control-label' %>
            <%= f.text_field :image_url, class: 'form-control' %>
        </div>
        <%= f.label :purchased, class: "form-check-label" do %>
            <%= f.check_box :purchased %>
            <span>Do you own it?</span>
          <% end %>
        <br />
        <%= f.submit 'Submit Changes', class: 'btn btn-primary' %>
    </div>
<% end %>